<div style="margin-top:45px;">
    <div class="container">
        <div class="text-center">
            <a class="text-white h1" href="/players">
                Top players
            </a>
        </div>
        {% if leftPlayers|length + rightPlayers|length > 1 %}
            <div class="row" style="white-space: nowrap">
                <div class="col-md-6 text-dark" style="margin-top:20px;">
                    <div style="margin-top:-20px;">
                        {% for player in leftPlayers %}
                            {% include 'partials/player/player-bar.twig' with player %}
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-6 text-dark" style="margin-top:20px;">
                    <div style="margin-top:-20px;">
                        {% for player in rightPlayers %}
                            {% include 'partials/player/player-bar.twig' with player %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            {% include 'partials/no-results.twig' %}
        {% endif %}
    </div>
</div>